  },
  "dependencies": {
    "react": "^17.0.0",
    "react-dom": "^17.0.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react-refresh": "^1.3.1",
    "autoprefixer": "^10.3.3",
    "postcss-cli": "^8.3.1",
    "tailwindcss": "^2.2.9",
    "vite": "^2.5.2"
  }
}
