{
  "name": "react-todo",
  "version": "0.0.0",
  "scripts": {
    "dev": "npm run watch:css && vite --host",
    "build": "npm run production && vite build",
    "serve": "vite preview",
    "production": "cross-env NODE_ENV=production postcss src/css/tailwind.css -o src/css/main.css",
    "build:css": "postcss src/css/tailwind.css -o src/css/main.css",
    "watch:css": "postcss src/css/tailwind.css -o src/css/main.css"
  },
  "dependencies": {
    "react": "^17.0.0",
    "react-dom": "^17.0.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react-refresh": "^1.3.1",
    "autoprefixer": "^10.3.3",
    "cross-env": "^7.0.3",
    "postcss-cli": "^8.3.1",
    "tailwindcss": "^2.2.9",
    "vite": "^2.5.2",
    "vite-plugin-pwa": "^0.11.2",
    "workbox-build": "^6.2.4"
  }
}
